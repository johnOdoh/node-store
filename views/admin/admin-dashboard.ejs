    <div class="section-admin container-fluid res-mg-t-15">
        <div class="row admin text-center">
            <div class="col-md-12">
                <div class="col-xs-12" style="margin-bottom: 30px;">
                    <div class="admin-content analysis-progrebar-ctn res-mg-t-30" style="margin-top: -30px;">
                        <h4 class="text-left text-uppercase"><b>Date</b></h4>
                        <div class="row vertical-center-box vertical-center-box-tablet">
                            <div class="text-left col-xs-3 mar-bot-15">
                                <label class="label bg-green" id="percent">15% <i class="fa fa-level-down" aria-hidden="true"></i></label>
                            </div>
                            <div class="col-xs-9 cus-gh-hd-pro">
                                <h2 class="text-right no-margin" id="date"></h2>
                            </div>
                        </div>
                        <div class="progress progress-mini">
                            <div style="width: 0;" class="progress-bar progress-bar-success bg-green" id="level"></div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12" style="margin-bottom: 30px;">
                        <div class="admin-content analysis-progrebar-ctn">
                            <h4 class="text-left text-uppercase" style="margin-bottom: 30px;"><b>Orders</b></h4>
                            <div class="row vertical-center-box vertical-center-box-tablet">
                                <div class="col-xs-6 mar-bot-15 text-left">
                                    <label class="text-left">This Year </label>
                                </div>
                                <div class="col-xs-6 cus-gh-hd-pro">
                                    <h2 class="text-right no-margin">
                                        <%= orderData.year.qty %>
                                    </h2>
                                </div>
                            </div>
                            <div class="row vertical-center-box vertical-center-box-tablet">
                                <div class="col-xs-6 mar-bot-15 text-left">
                                    <label class="text-left">This Month </label>
                                </div>
                                <div class="col-xs-6 cus-gh-hd-pro">
                                    <h2 class="text-right no-margin">
                                        <%= orderData.month.qty %>
                                    </h2>
                                </div>
                            </div>
                            <div class="row vertical-center-box vertical-center-box-tablet">
                                <div class="col-xs-6 mar-bot-15 text-left">
                                    <label class="text-left">Last 7 days </label>
                                </div>
                                <div class="col-xs-6 cus-gh-hd-pro">
                                    <h2 class="text-right no-margin">
                                        <%= orderData.week.qty %>
                                    </h2>
                                </div>
                            </div>
                            <div class="row vertical-center-box vertical-center-box-tablet">
                                <div class="col-xs-6 mar-bot-15 text-left">
                                    <label class="text-left">Today </label>
                                </div>
                                <div class="col-xs-6 cus-gh-hd-pro">
                                    <h2 class="text-right no-margin">
                                        <%= orderData.today.qty %>
                                    </h2>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12" style="margin-bottom: 30px;">
                        <div class="admin-content analysis-progrebar-ctn">
                            <h4 class="text-left text-uppercase" style="margin-bottom: 30px;"><b>Sales</b></h4>
                            <div class="row vertical-center-box vertical-center-box-tablet">
                                <div class="col-xs-6 mar-bot-15 text-left">
                                    <label class="text-left">This Year </label>
                                </div>
                                <div class="col-xs-6 cus-gh-hd-pro">
                                    <h2 class="text-right no-margin">
                                        <%= '$'+orderData.year.amount.toFixed(2) %>
                                    </h2>
                                </div>
                            </div>
                            <div class="row vertical-center-box vertical-center-box-tablet">
                                <div class="col-xs-6 mar-bot-15 text-left">
                                    <label class="text-left">This Month </label>
                                </div>
                                <div class="col-xs-6 cus-gh-hd-pro">
                                    <h2 class="text-right no-margin">
                                        <%= '$'+orderData.month.amount.toFixed(2) %>
                                    </h2>
                                </div>
                            </div>
                            <div class="row vertical-center-box vertical-center-box-tablet">
                                <div class="col-xs-6 mar-bot-15 text-left">
                                    <label class="text-left">Last 7 days </label>
                                </div>
                                <div class="col-xs-6 cus-gh-hd-pro">
                                    <h2 class="text-right no-margin">
                                        <%= '$'+orderData.week.amount.toFixed(2) %>
                                    </h2>
                                </div>
                            </div>
                            <div class="row vertical-center-box vertical-center-box-tablet">
                                <div class="col-xs-6 mar-bot-15 text-left">
                                    <label class="text-left">Today </label>
                                </div>
                                <div class="col-xs-6 cus-gh-hd-pro">
                                    <h2 class="text-right no-margin">
                                        <%= '$'+orderData.today.amount.toFixed(2) %>
                                    </h2>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12" style="margin-bottom: 30px;">
                        <div class="admin-content analysis-progrebar-ctn">
                            <h4 class="text-left text-uppercase" style="margin-bottom: 30px;"><b>Best Sellers</b></h4>
                            <% for (let i=0; i < 5; i++) { %>
                                <div class="row vertical-center-box vertical-center-box-tablet">
                                    <div class="col-xs-6 mar-bot-15 text-left">
                                        <a href="/admin/product-detail/<%= products[i]._id %>"><label class="text-left"><%= products[i].title %> </label></a>
                                    </div>
                                    <div class="col-xs-6 cus-gh-hd-pro">
                                        <h2 class="text-right no-margin">
                                            <%= products[i].sold %> Sold</h2>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12" style="margin-bottom: 30px;">
                        <div class="admin-content analysis-progrebar-ctn">
                            <h4 class="text-left text-uppercase" style="margin-bottom: 30px;"><b>Out of Stock</b></h4>
                            <% for (let stock of outOfStock) { %>
                                <div class="row vertical-center-box vertical-center-box-tablet">
                                    <div class="col-xs-6 mar-bot-15 text-left">
                                        <a href="/admin/product-detail/<%= stock._id %>"><label class="text-left"><%= stock.title %> </label></a>
                                    </div>
                                </div>
                                <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        setInterval(function() {
            document.getElementById('date').innerText = new Date()
        }, 1000);
        const year = new Date().getFullYear();
        const time = (Date.now() - new Date(year, 0, 1, 0, 0, 0).getTime()) / (1000)
        const percentage = ((time / (365 * 24 * 60 * 60)) * 100).toFixed(2)
        document.getElementById('level').style.width = percentage + '%'
        document.getElementById('percent').innerText = percentage + '%'
    </script>

