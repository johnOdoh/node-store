<%- include('includes/header.ejs') %>

    <!-- Start All Title Box -->
    <div class="all-title-box">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h2>Contact Us</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/home">Home</a></li>
                        <li class="breadcrumb-item active"> Contact Us </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!-- End All Title Box -->

    <!-- Start Contact Us  -->
    <div class="contact-box-main">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-sm-12">
                    <div class="contact-info-left">
                        <h2>CONTACT INFO</h2>
                        <p>Use any of the channels below to contact us for your enquiries, suggestions or complaints </p>
                        <ul>
                            <li>
                                <p><i class="fas fa-map-marker-alt"></i>Address: No 10 Independence Avenue <br>Enugu, Enugu state,<br> Nigeria </p>
                            </li>
                            <li>
                                <p><i class="fas fa-phone-square"></i>Phone: <a href="tel:+234 813 343 9380">+1-888 705 770</a></p>
                            </li>
                            <li>
                                <p><i class="fas fa-envelope"></i>Email: <a href="mailto:thefashionmall@gmail.com">thefashionmall@gmail.com</a></p>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-8 col-sm-12">
                    <div class="contact-form-right">
                        <h2>GET IN TOUCH</h2>
                        <p>Send us an instant message directly to our email using the form below</p>
                        <% if(successMessage || errMessage) { %>
                            <h4 class="text-center" style="color: green;">
                                <%= successMessage %>
                            </h4>
                            <% } %>

                                <form action="/contact-us" method="POST" novalidate>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <input type="text" class="form-control" name="name" placeholder="Your Name" required>
                                                <% if (errors &&    errors.name){ %>
                                                    <div class="help-block"><i style="color: red;">Please enter your name</i></div>
                                                    <% } %>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <input type="email" placeholder="Your Email" class="form-control" name="email" required>
                                                <% if (errors && errors.email){ %>
                                                    <div class="help-block"><i style="color: red;">Please enter a valid email</i></div>
                                                    <% } %>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <input type="text" class="form-control" name="subject" placeholder="Subject" required>
                                                <% if (errors && errors.subject){ %>
                                                    <div class="help-block"><i style="color: red;">Please enter the subjeect</i></div>
                                                    <% } %>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <textarea class="form-control" name="message" placeholder="Your Message" rows="4" required></textarea>
                                                <% if (errors && errors.message){ %>
                                                    <div class="help-block"><i style="color: red;">Please enter your message</i></div>
                                                    <% } %>
                                            </div>
                                            <div class="submit-button text-center">
                                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                <button class="btn hvr-hover" type="submit">Send Message</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Cart -->

    <%- include('includes/footer.ejs') %>
        </body>

        </html>