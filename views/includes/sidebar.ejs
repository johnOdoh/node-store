<script>
    const filter = (btn) => {
            let str = btn.previousElementSibling.value;
            str = str.replace(/\$/g, '').split('-');
            const min = +str[0];
            const max = +str[1];
            let query = window.location.search;
            query = query.split('&min=')[0];
            window.location.search = query + '&min=' + min + '&max=' + max;
        }
        //Male nav
    const mTop = document.getElementsByClassName('male-top');
