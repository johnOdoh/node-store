        mTopTotal = 0,
        mBotTotal = 0,
        mFootTotal = 0,
        mUnderTotal = 0;

    for (let element of mTop) {
        element = element.innerText.replace('(', '').replace(')', '');
        mTopTotal += +element;
    }
    for (let element of mBot) {
        element = element.innerText.replace('(', '').replace(')', '');
        mBotTotal += +element;
    }
    for (let element of mFoot) {
