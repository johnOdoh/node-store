    }
    document.getElementsByClassName('female-top-total')[0].innerText = '(' + fTopTotal + ')';
    document.getElementsByClassName('female-bot-total')[0].innerText = '(' + fBotTotal + ')';
    document.getElementsByClassName('female-foot-total')[0].innerText = '(' + fFootTotal + ')';
    document.getElementsByClassName('female-access-total')[0].innerText = '(' + fAccessTotal + ')';
